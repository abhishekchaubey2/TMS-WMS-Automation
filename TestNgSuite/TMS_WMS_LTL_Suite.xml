<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TMS_WMS_LTL_Suite" parallel="false" verbose="1">
    
    <!-- TMS and WMS LTL Integration Tests -->
    <test name="TMS_WMS_LTL_Tests" preserve-order="true">
        <groups>
            <run>
                <include name="LTL"/>
                <include name="Auth"/>
                <include name="Config"/>
                <include name="OrderCreation"/>
                <include name="LoadCreation"/>
                <include name="OrderUpdate"/>
                <include name="Indents"/>
            </run>
        </groups>
        
        <classes>
            <!-- LTL Order Tests -->
            <class name="com.delhivery.TMS_WMS.testModules.TmsWmsLtlTest">
                <methods>
                    <include name="testGenerateOrderAppToken"/>
                    <include name="testVerifyOrderAppTokenStored"/>
                    <include name="testGenerateDemandAppToken"/>
                    <include name="testVerifyDemandAppTokenStored"/>
                    <include name="testCreateLtlOrder"/>
                    <include name="testCreateLtlLoad"/>
                    <include name="testUpdateLtlOrder"/>
                    <include name="testGetIndentsByLoadId"/>
                    <include name="testCheckIndentDetailAndRetry"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>

